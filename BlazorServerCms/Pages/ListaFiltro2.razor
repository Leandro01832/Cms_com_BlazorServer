            </center>
        }
    }

    </div>

@code {
    [Parameter] public int capitulo{ get; set; }
    [Parameter] public string dominio{ get; set; }
    [Parameter] public string compartilhante{ get; set; }

    private List<Filtro> lista;
    private DemoContextFactory db = new DemoContextFactory();
    private ApplicationDbContext Context;



    protected override async Task OnParametersSetAsync()
    {
        Context = db.CreateDbContext(null);
        var str = await Context.Story!.Include(s => s.Filtro)!
        .ThenInclude(s => s.Pagina)!
        .ThenInclude(s => s.Content).FirstAsync(s => s.PaginaPadraoLink == capitulo);

        if (str.Filtro == null || str.Filtro.Count == 0)
            navigation.NavigateTo("/");

        lista = str.Filtro.Where(f => f.user == null).OrderBy(f => f.Id).ToList();
    }

    private bool NewVers(Filtro fil)
    { 
        if (fil.Pagina.FirstOrDefault(p => p.Content.Data > DateTime.Now.AddDays(-3)) != null)
        return true;
        else return false;
    }
}
