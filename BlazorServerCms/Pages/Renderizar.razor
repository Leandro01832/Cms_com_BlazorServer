                            {
                                if (outroHorizonte == 1 && capitulo != 0)
                                {
                                    <span class="TextoInformativo">Pasta @indice de @quantidadeLista</span>

                                }
                                else if (outroHorizonte == 2 && capitulo != 0)
                                {
                                    <span class="TextoInformativo">Pergunta @indice de @quantidadeLista</span>

                                }
                                else if (outroHorizonte == 3 && capitulo != 0)
                                {
                                    <span class="TextoInformativo">Marcador @indice de @quantidadeLista</span>

                                }
                                else if (substory == null)
                                {
                                    <span class="TextoInformativo">Versiculo @indice de @quantidadeLista</span>
                                }

                            }
                            if (outroHorizonte == 1)
                            {
                                <a href="/listar-pasta/@capitulo/@dominio/@compartilhante" class="btn btn-dark">
