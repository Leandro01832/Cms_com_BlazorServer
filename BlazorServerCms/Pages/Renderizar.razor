@inherits RenderizarBase
@layout MeuLayout


@if (Mensagem != null || repositoryPagina!.stories.Count == 0)
{
    if (repositoryPagina!.stories.Count == 0)
    {
        <PageTitle>Carregando...</PageTitle>
        <center>
            <h1>
                Carregando uma história...
            </h1>
            <img src="/Loading.gif" />
        </center>
    }
    else
    {
        <PageTitle>@Mensagem</PageTitle>
        if (Mensagem.Contains("digite um numero menor"))
        {
            <h1>Pagina não encontrada</h1>
        }
        <h1>@Mensagem</h1>
        <br />
        <a href="#" onclick="@Casinha" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
            </svg>

        </a>

    }

}
else
{
    <div id="renderizar">

       

        <div class="share">

            <button class="btn btn-primary" type="button" @onclick="StartTour">Start Tour</button>

            @if (substory != null && rotas == null && ultimaPasta ||
           substory != null && rotas == null && compartilhante != "comp")
            {
                <a class="compartilhar" onclick="@share">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-share" viewBox="0 0 16 16">
                        <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.5 2.5 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5m-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3m11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3" />
                    </svg>
                </a>
            }


        </div>

        <GuidedTour TourId="FormGuidedTour1" OverlayEnabled="true">
            <GuidedTourStep Title="Acessar story" StepName="firstStep" TourStepSequence="1"
                            ElementSelector="[data-first]">
                <span>Acesse a story e altere o capitulo se for necessário</span>
            </GuidedTourStep>
            <GuidedTourStep Title="Acessando" StepName="Step2" TourStepSequence="2"
                            ElementSelector="[data-2]">
                @if (outroHorizonte == 0)
                {
                    <span>Informe o numero do versiculo e acesse qualquer pagina desta story. (Horizonte versiculos).</span>

                }
                else if (outroHorizonte == 1)
                {
                    <span>Informe o numero da pasta e acesse qualquer filtro desta story criado pelo admin. (Horizonte pastas).</span>

                }
                else if (outroHorizonte == 2)
                {
                    <span>Informe o numero da pergunta que se refere a esta story. (Horizonte perguntas).</span>

                }
                else if (outroHorizonte == 3)
                {
                    <span>Informe o numero do marcador e acesse qualquer filtro desta story criado pelo usuario. (Horizonte marcador).</span>

                }
            </GuidedTourStep>
            <GuidedTourStep Title="Home" StepName="Step3" TourStepSequence="3"
                            ElementSelector="[data-3]">
                <span>Neste link você acessará a home ou a capa do livro </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Comentários" StepName="Step4" TourStepSequence="4"
                            ElementSelector="[data-4]">
                <span>
                    Clique neste link para visualizar comentarios deste versiculo ou fazer um comentário.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Pastas" StepName="Step5" TourStepSequence="5"
                            ElementSelector="[data-5]">
                <span>
                    Visualise todas as pastas deste versiculo clicando neste link.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Ultima pasta" StepName="Step6" TourStepSequence="6"
                            ElementSelector="[data-6]">
                <span>
                    Neste link você será redirecionado para ultima pasta onde vão estar todos os versiculos marcados,
                    perguntas, respostas, marcadores etc.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Automático" StepName="Step7" TourStepSequence="7"
                            ElementSelector="[data-7]">
                <span>
                    Clique aqui para mostrar as paginas automaticamente.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Marcador" StepName="Step8" TourStepSequence="8"
                            ElementSelector="[data-8]">
                <span>
                    Clique aqui para acessar o horizonte marcador
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Perguntas" StepName="Step9" TourStepSequence="9"
                            ElementSelector="[data-9]">
                <span>
                    Clique aqui para acessar o horizonte perguntas
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Pastas" StepName="Step10" TourStepSequence="10"
                            ElementSelector="[data-10]">
                <span>
                    Clique aqui para acessar o horizonte pastas
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Versiculos" StepName="Step11" TourStepSequence="11"
                            ElementSelector="[data-11]">
                <span>
                    Clique aqui para acessar o horizonte versiculos
                </span>
            </GuidedTourStep>
        </GuidedTour>

        <GuidedTour TourId="FormGuidedTour2" OverlayEnabled="true">
            <GuidedTourStep Title="Marcar" StepName="firstStep" TourStepSequence="1"
                            ElementSelector="[data-first]">
                <span>
                    Quando aparecer apenas um versiculo significa que você esta dentro da pasta.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Criar filtro" StepName="Step2" TourStepSequence="2"
                            ElementSelector="[data-2]">
                <span>
                    Clique aqui e crie seu filtro.
                </span>
            </GuidedTourStep>
            <GuidedTourStep Title="Numero" StepName="Step3" TourStepSequence="3"
                            ElementSelector="[data-3]">
                <span>
                    Este é o numero da pasta que foi acessado.
                </span>
            </GuidedTourStep>
        </GuidedTour>

        @if (usuarios!.Count > 0)
        {

            <div class="users">

                @foreach (var item in usuarios!)
                {
                    <a onclick="@(() => acessarPreferenciasUsuario(item.user))">
                        Usuario compartilhante @item.user -
                        <div class="circulop2">
                            <div class="circulo2p2">
                                @if (item.UserModel.Image != null)
                                {
                                    <img src="ImgUser/usuario-@(item.user)-@(item.UserModel.Image)" class="ImgUser">

                                }
                                else
                                {
                                    <img src="ImgUser/padrao.jpg" class="ImgUser">
                                }
                            </div>
                        </div>
                    </a>
                }
            </div>
        }

        <div id="render">

            @if (outroHorizonte == 0)
            {

                <div class="cabecalho">

                    @if (rotas != null)
                    {
                        <p>Versiculos encontrados</p>
                    }


                    @if (Model2 != null && Model2.user != null)
                    {
                        <p>

                            <h5>pasta de @compartilhante </h5>
                            <h5> <a href="/renderizar/@capitulo/1/0/11/1/1/0/0/0/@dominio/comp">acessar pastas de admin</a>  </h5>
                        </p>
                    }

                    @if (substory != null)
                    {
                        <p>
                            @if (Content == false)
                            {
                                @Model.Data.ToString("dd/MM/yyyy")

                            }

                            <input type="checkbox" id="data" name="data" @bind="Content" />
                            Conteudo?
                        </p>

                        <p>
                            <h5> <a href="#" onclick="@acessarItem">1º item</a>  </h5>
                        </p>

                    }
                </div>

                <!-- ProdutoContent -->
                if (nameStory == "Padrao")
                {
                    <center>
                        <h1>
                            <a onclick="@(() => navigation!.NavigateTo($"/renderizar/{indice}/1/1/11/{outroHorizonte}/{indiceLivro}/0/dominio/comp/comp/comp/comp/comp/comp"))">
                                Story @repositoryPagina!.stories!.Skip(1).ToList()[indice - 1].Nome
                                <div class="circulo">
                                    <div class="circulo2">
                                        @if (repositoryPagina!.stories!.Skip(1).ToList()[indice - 1].Image != null)
                                        {
                                            <img src="ImgStory/cap.@(repositoryPagina!.stories!.Skip(1).ToList()[indice - 1].PaginaPadraoLink).@(repositoryPagina!.stories!.Skip(1).ToList()[indice - 1].Image)" class="ImgStory">

                                        }
                                    </div>
                                </div>
                            </a>
                        </h1>

                    </center>
                }
                else
        if (indice == 1 && substory == null && nameStory != "Padrao")
                {
                    <p> Seja bem vindo a story @nameStory </p>
                }
                else
        if (Model.Produto != null)
                {
                    <div class="row container produto">
                        <div class="col-md-6 info">
                            <p> Categoria: @Model.Produto.Nome </p>
                            <p> Descrição: @Model.Produto.Descricao </p>
                            <p> Preço: @Model.Produto.Preco </p>
                            <p> Estoque: @Model.Produto.QuantEstoque </p>
                            <div class="col-md-12 imagens">
                                @{
                                    @foreach (var item in Model.Produto.Imagem!.ToList())
                                    {
                                        if (Model.Produto.Imagem!.ToList().IndexOf(item) != 0)
                                        {
                                            <img src="@item.ArquivoImagem" class="ImagemProduto" />
                                        }
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-6 imagem">
                            <img src="@Model.Produto.Imagem!.First().ArquivoImagem" class="ImagemProduto" />
                        </div>

                    </div>

                }
               @*  else if (html!.Contains("iframe") && Model.Content != null)
                {

                    <div id="descricao"></div>
                    <center>
                        <div id="player"></div>

                    </center>
                } *@
                else
                {
                    @markup
                }

                if (Model.Produto != null && repositoryPagina!.buscarEcommerce() == "yes")
                {
                    <a href="/carrinho/@Model.Produto.Id/@capitulo/@indice/@dominio/@compartilhante">
                        Adicionar ao carrinho
                    </a>
                }

                <!-- ProdutoContent -->
                if (Model.Story.PaginaPadraoLink == 2
                && Model.Comentario != 0)
                {
                    <p>Comentário do Capitulo @CapituloComentario Verso @VersoComentario </p>
                }
                else if (Model.Story.PaginaPadraoLink == 2)
                {
                    <p>Apenas um comentário </p>

                }
            }
            else if (outroHorizonte == 1 && Model2 != null)
            {
                var cam = buscarCamada(Model2);
                <center>
                    <a onclick="@acessarPasta">
                        <h3> Pasta @Model2!.Nome </h3>
                    </a>

                    <p>
                        Camada nº @cam
                    </p>
                    @{

                        var p = buscarPastaFiltrada(cam);

                        if (@cam != 1 && p != null)
                        {
                            <p>
                                é um filtro da
                                <a onclick="@(() => navigation.NavigateTo($"/renderizar/{capitulo}/{p}/0/11/0/{indiceLivro}/{retroceder}/{dominio}/{compartilhante}/{compartilhante2}"))">
                                    pasta  @p
                                </a>
                            </p>
                        }
                        else if (p == null)
                        {
                            <p>Esta pasta não possui nenhum versículo</p>
                        }

                    }

                </center>
            }
            else if (outroHorizonte == 2 && Model3 != null)
            {
                <center>
                    <h3>  @Model3.Questao </h3>

                    @if (Model3.UserResponse != null)
                    {
                        <a onclick="@acessarPergunta">
                            visualizar resposta
                        </a>

                    }
                    else
                    {
                        <a onclick="@acessarPergunta">
                            responder com versos
                        </a>

                    }





                </center>
            }
            else if (outroHorizonte == 3 && compartilhante != null)
            {
                if (compartilhante == "comp")
                {
                    <center>
                        <label>
                            Informe o usuario compartilhante
                        </label>
                        <input type="text" placeholder="Usuario" id="NumeroPaginaAcesso3" onchange="@((ChangeEventArgs e) => alterarQuery(e))" />


                    </center>
                }
                else if (Model4 != null)
                {
                    <center>
                        <label>
                            Alterar usuario compartilhante
                        </label>
                        <input type="text" placeholder="Usuario" id="NumeroPaginaAcesso3" onchange="@((ChangeEventArgs e) => alterarQuery(e))" />
                        <h1>usuario - @compartilhante </h1>
                        Pasta do usuario
                        <a href="/filtro/@capitulo/pasta-@indiceAcesso/@indiceLivro/@retroceder/@dominio/@compartilhante">
                            <h2> <u>@Model4.Nome</u> </h2>
                        </a>

                    </center>
                }
            }




        </div>

        <a class="carousel-control-prev btn btn-dark" onclick="@buscarAnterior">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
            </svg>
        </a>

        <a class="carousel-control-next btn btn-dark" onclick="@buscarProximo">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-chevron-double-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708z" />
                <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </a>

        <div id="PaginacaoConteudo" class="Paginacao">

            <center>
                <div class="Informativo">
                    <h3>

                        <input data-7 type="checkbox" @bind="automatico" id="automatico" name="automatico" />
                       

                        Automático
                    </h3>

                    <div id="horizontes">


                        @{
                            if (capitulo != 0)
                            {

                                @if (substory == null && outroHorizonte == 3 && condicaoFiltro)
                                {
                                    <div data-8 style="background-color:gray;" class="item-horizonte">


                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder btn btn-danger" viewBox="0 0 16 16">
                                            <path d="M9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.825a2 2 0 0 1-1.991-1.819l-.637-7a2 2 0 0 1 .342-1.31L.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3m-8.322.12q.322-.119.684-.12h5.396l-.707-.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981z" />
                                        </svg>

                                    </div>
                                }

                                else if (substory == null)
                                {
                                    <div data-8 style="background-color:transparent;" class="item-horizonte">

                                        <a onclick="@acessarHorizonteMarcadores">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder btn btn-danger" viewBox="0 0 16 16">
                                                <path d="M9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.825a2 2 0 0 1-1.991-1.819l-.637-7a2 2 0 0 1 .342-1.31L.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3m-8.322.12q.322-.119.684-.12h5.396l-.707-.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981z" />
                                            </svg>
                                        </a>
                                    </div>
                                }


                                @if (substory == null && outroHorizonte == 1 && condicaoFiltro)
                                {
                                    <div data-10 style="background-color:gray;" class="item-horizonte">


                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder btn btn-dark" viewBox="0 0 16 16">
                                            <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4H2.19zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707z" />
                                        </svg>

                                    </div>
                                }
                                else if (substory == null)
                                {
                                    <div data-10 style="background-color:transparent;" class="item-horizonte">

                                        <a onclick="@acessarHorizontePastas">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder btn btn-dark" viewBox="0 0 16 16">
                                                <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4H2.19zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707z" />
