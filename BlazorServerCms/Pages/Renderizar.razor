                                {
                                    <div data-11 style="background-color:transparent;" class="item-horizonte">

                                        <a data-8 onclick="@acessarHorizonteVersos">
                                            <div class="barra">
                                                ---
                                            </div>
                                        </a>
                                    </div>
                                }


                            }



                            if (capitulo == 0)
                            {
                                <span class="TextoInformativo">Capitulo @indice de @quantidadeLista</span>
                            }
