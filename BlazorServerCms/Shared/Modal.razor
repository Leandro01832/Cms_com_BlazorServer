

<!-- Modal.razor -->
<div class="modal @(IsVisible ? "d-block" : "d-none")" style="background:rgba(0,0,0,0.5)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">Fechar</button>
                @if (ShowConfirmButton)
                {
                    if(Confirm == "Compartilhar")
                    {
                    <button type="button" class="btn btn-primary" @onclick="OnConfirm">@Confirm</button>

                    }
                    else
                    {
                    <button type="button" class="btn btn-primary" @onclick="Excluir">@Confirm</button>

                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Confirm { get; set; }
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public bool ShowConfirmButton { get; set; } = true;
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback Excluir { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback Close { get; set; }
}
